{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "additionalProperties": false,
  "definitions": {
    "Division": {
      "additionalProperties": false,
      "properties": {
        "area": {
          "description": "Area in km².",
          "type": "number"
        },
        "highlights": {
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "image": {
          "type": "string"
        },
        "imageAttribution": {
          "type": "string"
        },
        "info": {
          "type": "string"
        },
        "link": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "population": {
          "type": "number"
        },
        "type": {
          "description": "The list of all divisions should cover all land without overlap.\n\nWhere appropriate, to keep things intuitive, some divisions may be grouped together (e.g. just\n제주 which covers 제주시 and 서귀포시).\n\nThere are also special cases where we may want to have a separate entry (e.g. for 독도), or\nwhere a 광역시 contains a 군.",
          "enum": ["광역시", "군", "시", "특별시", "특별자치도", "특별자치시"],
          "type": "string"
        }
      },
      "required": ["area", "link", "name", "population", "type"],
      "type": "object"
    }
  },
  "properties": {
    "$schema": {
      "type": "string"
    },
    "divisions": {
      "items": {
        "$ref": "#/definitions/Division"
      },
      "type": "array"
    }
  },
  "required": ["divisions"],
  "type": "object"
}
